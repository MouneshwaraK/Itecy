<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:id="@+id/ll_editeExperince"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="popupdialoggggggggggggggggggggggggggggggggg"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editExperienceLayout"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/companiesLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/cmpny"
                android:text="Select company"
                android:textColor="@color/pink"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/companySearch"
                android:text=""
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textColor="@color/black"/>

            <View
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"></View>
            <TextView
                android:id="@+id/tv_errorCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/red"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/industryLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/industry12"
                android:text="Select industry"
                android:textColor="@color/pink"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/industrySearch"
                android:text=""
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textColor="@color/black"/>

            <View
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"></View>
            <TextView
                android:id="@+id/tv_errorIndustry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/red"
                android:visibility="gone" />
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/functionalAreaLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/area1"
                    android:text="Select functional area"
                    android:textColor="@color/pink"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/functionalAreaSearch"
                    android:text=""
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:textColor="@color/black"/>

                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"></View>
                <TextView
                    android:id="@+id/tv_errorFunctionalArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/red"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/designationLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/desg"
                    android:text="Select designation"
                    android:textColor="@color/pink"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/designationSearch"
                    android:text=""
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:textColor="@color/black"/>

                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"></View>
                <TextView
                    android:id="@+id/tv_errorDesignation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/red"
                    android:visibility="gone" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monthly Salary"
                android:layout_margin="5dp">
                <EditText
                    android:scrollHorizontally="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:id="@+id/monthlySalary"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joining date"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:layout_gravity="bottom"
                android:textColor="@color/pink" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/joiningDate"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_errorJoinDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/red"
                android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/expectedSalaryLayoutInExp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select expected salary"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:layout_gravity="bottom"
                android:textColor="@color/pink" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:entries="@array/expectedSalary"
                android:id="@+id/getExpectedSalaryInExp">

            </Spinner>

            <View
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black">
            </View>

            <TextView
                android:id="@+id/tv_errorExpectedSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/red"
                android:visibility="gone" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/noticePeriodLayoutInExp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select notice period"
                    android:paddingLeft="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/pink" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:entries="@array/noticePeriod"
                    android:id="@+id/getNoticePeriodInExp">

                </Spinner>

                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black">

                </View>
                <TextView
                    android:id="@+id/tv_errorNoticePeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/red"
                    android:visibility="gone" />
            </LinearLayout>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Is Current Company"
                android:id="@+id/isCurrentCompany"
                android:layout_margin="5dp">
            </CheckBox>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:padding="10dp"
                    android:id="@+id/upDateExperienceProfile"
                    android:background="@color/button"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/cancelExperienceProfile"
                    android:padding="10dp"
                    android:background="@color/button"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>